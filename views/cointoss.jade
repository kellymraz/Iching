//- Can think of this as the html for the coin toss
extends layout
block content
	.transparencyHolder.cointoss
		.row
			.col-xs-6.col-md-offset-3
				form.form-horizontal
					.form-group
						input#inputQuestion.form-control.cointossFont(type='text', placeholder='Ex. Should I...') 
		.row
			.wrap
				.image.col-md-4#coin01
					img(src="images/dragoncoin-heads.png")
				.image.col-md-4#coin02
					img(src="images/dragoncoin-heads.png")
				.image.col-md-4#coin03
					img(src="images/dragoncoin-heads.png")
		.row
			.button-container		
				a.small-spacing.backHomeButton.btn.btn-default.cointossFont(href="/home") Back to Main Page
				button.small-spacing.coinTossButton.btn.btn-default.cointossFont(type='submit') Click Here to Toss the Coins 6 Times(remember to concentrate on your question!)
			.hexContainer.col-md-12
			
			.hexButtonContainer
block scripts
	script(src="js/cointoss.js")

							
